<ul class="pagination justify-content-center">
			<li class="page-item {{ (page == 1) ? 'disabled' : ''}}">
				<a class="page-link" href="{{ path("post_index", { 'page' : 1 }) }}">
					<i class="fas fa-angle-double-left"></i>
				</a>
			</li>
			<li class="page-item {{ (page == 1) ? 'disabled' : ''}}">
				<a class="page-link" href="{{ (page > 1) ? path("post_index", { 'page' : (page - 1) }) : '' }}">
					<i class="fas fa-chevron-left"></i>
				</a>
			</li>
			{% set pages = ((total / limit)|round(0, 'ceil')) %}
			{% for item in 1..pages %}
				<li class="page-item {{ item == page ? 'active' }}">
					<a class="page-link" href="{{ path("post_index", { 'page' : item }) }}">{{item}}</a>
				</li>
			{% endfor %}
			<li class="page-item {{ (page == pages) ? 'disabled' : ''}}">
				<a class="page-link" href="{{ (page < pages) ? path("post_index", { 'page' : (page + 1) }) : '' }}">
					<i class="fas fa-chevron-right"></i>
				</a>
			</li>
			<li class="page-item {{ (page == pages) ? 'disabled' : ''}}">
				<a class="page-link" href="{{path("post_index", { 'page' : pages }) }}">
					<i class="fas fa-angle-double-right"></i>
				</a>
			</li>
		</ul>